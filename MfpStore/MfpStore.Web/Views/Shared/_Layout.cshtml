@using MfpStore.Web.App_LocalResources
@using MfpStore.Web.App_LocalResources.Account
@{
    var currentLang = ViewContext.RouteData.Values["lang"].ToString();
    var url = Context.Request.RawUrl == "/" ? $"/{currentLang}" : Context.Request.RawUrl;

    var linkEn = url.Replace(currentLang, "EN");
    var linkRu = url.Replace(currentLang, "RU");
    var linkUk = url.Replace(currentLang, "UK");

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet/less" type="text/css" href="/Content/MySyte.less" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>@GlobalRes.MainTitle</h1>
            </div>
            <div class="col-sm-1">
                <div class="row">
                    <a href="@linkRu">RU</a>|
                    <a href="@linkUk">UA</a>|
                    <a href="@linkEn">EN</a>|
                </div>
                <div>
                    @Html.ActionLink(@AccountRes.Account, "Index", "Account")
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            @Html.Partial("_TopMenu")
        </div>
        <div class="row">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mfp Store</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
