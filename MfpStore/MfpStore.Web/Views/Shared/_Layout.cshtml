@using MfpStore.Web.App_LocalResources
@{
    //var url = Context.Request.RawUrl == "/" ? $"/{GlobalRes.CurrentLang}/games" : Context.Request.RawUrl;
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
    //var linkEn = url.Replace("RU", "EN");
    //var linkRu = url.Replace("EN", "RU");
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet/less" type="text/css" href="/Content/MySyte.less" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>@GlobalRes.MainTitle</h1>
            </div>
            <div class="col-sm-1">
                <div class="row">
                    @Html.ActionLink("RU", currentAction, new { lang = "RU" })|
                    @Html.ActionLink("UA", currentAction, new { lang = "UK" })|
                    @Html.ActionLink("EN", currentAction, new { lang = "EN" })|
                </div>
                <div>
                    <a>My Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            @Html.Partial("_TopMenu")
        </div>
        <div class="row">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mfp Store</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
